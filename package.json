{
  "name": "@henryqrm/ui-components",
  "description": "UI Components",
  "repository": "https://github.com/henryqrm/lerna-experiments",
  "author": "henryqrm <henryqrm@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "build": "lerna exec --parallel -- rollup -c ../../../config/rollup.config.js",
    "start": "node scripts/sass-typings-watcher.js & lerna run start & yarn storybook",
    "sassTypings": "node scripts/sass-typings-init.js",
    "storybook": "start-storybook -p 6006 -c config/storybook",
    "build-storybook": "build-storybook"
  },
  "private": false,
  "workspaces": [
    "packages/components/*",
    "packages/containers/*",
    "packages/libraries/*"
  ],
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@storybook/addon-actions": "^5.1.8",
    "@storybook/addon-info": "^5.1.8",
    "@storybook/addon-links": "^5.1.8",
    "@storybook/addons": "^5.1.8",
    "@storybook/react": "^5.1.8",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "@types/prop-types": "^15.7.1",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.6",
    "chokidar": "^3.0.1",
    "css-loader": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "node-sass": "^4.12.0",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16.8.6",
    "rollup": "^1.16.2",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-typescript2": "^0.21.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "typescript": "^3.5.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec|steps))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
