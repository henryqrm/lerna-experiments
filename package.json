{
  "name": "@henryqrm/ui-components",
  "description": "UI Components",
  "repository": "https://github.com/henryqrm/lerna-experiments",
  "author": "henryqrm <henryqrm@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "storybook": "start-storybook -p 6006 -c config/storybook",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "build": "lerna exec --parallel -- rollup -c ../../../config/rollup.config.js",
    "start": "node scripts/sass-typings-watcher.js & lerna run start & yarn storybook",
    "sassTypings": "node scripts/sass-typings-init.js",
    "build-storybook": "build-storybook",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "format": "npm run format:scss && npm run format:ts && npm run format:js",
    "format:scss": "prettier-stylelint --write --quiet",
    "format:ts": "prettier-tslint fix \"**/*.{tsx,ts}\"",
    "format:js": "prettier --write \"**/*.{jsx,js}\"",
    "lint": "npm run lint:ts && npm run lint:sass",
    "lint:ts": "tslint \"**/*.ts*\"",
    "lint:sass": "stylelint /**/*.scss --syntax scss",
    "new:component": "node scripts/create-new-package.js components",
    "new:container": "node scripts/create-new-package.js containers",
    "new:library": "node scripts/create-new-package.js libraries"
  },
  "workspaces": [
    "packages/components/*",
    "packages/containers/*",
    "packages/libraries/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "prettier-tslint fix",
      "tslint .",
      "git add"
    ],
    "*.scss": [
      "prettier-stylelint --write --quiet .",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "useTabs": false,
    "jsxBracketSameLine": false,
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec|steps))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "setupFiles": [
      "./config/jest-setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@storybook/addon-actions": "^5.1.8",
    "@storybook/addon-info": "^5.1.8",
    "@storybook/addon-links": "^5.1.8",
    "@storybook/addons": "^5.1.8",
    "@storybook/react": "^5.1.8",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.6",
    "chokidar": "^3.0.1",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.4",
    "css-loader": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "prettier-stylelint": "^0.4.2",
    "prettier-tslint": "^0.4.2",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16.8.6",
    "rollup": "^1.16.2",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-stylelint": "0.0.4",
    "rollup-plugin-typescript2": "^0.21.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.3.0",
    "tslib": "^1.10.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.1.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  }
}
