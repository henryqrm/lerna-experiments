{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "lib": ["es2015", "es2017", "dom"],
    "jsx": "react",
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "exclude": [
    "**/node_modules/**",
    "build",
    "tasks",
    "**/*.test.ts",
    "**/*.store.tsx"
  ]
}
