{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "tasks",
    "**/*.test.ts",
    "**/*Example.tsx",
    "**/*.config.js"
  ]
}

